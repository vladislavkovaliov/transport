{
    "name": "wi-transport",
    "version": "1.0.0",
    "main": "./dist/index.js",
    "types": "./types/index.d.ts",
    "type": "module",
    "private": false,
    "files": [
        "dist",
        "types",
        "LICENSE",
        "README.md"
    ],
    "scripts": {
        "build": "rm -rf dist && rm -rf types && tsc",
        "commit": "git-cz",
        "prepare": "npm run build",
        "test": "./node_modules/.bin/vitest ./src --run --maxConcurrency 1",
        "lint": "eslint .",
        "semantic-release": "semantic-release",
        "format": "prettier --write src/**/*.ts"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/vladislavkovaliov/transport.git"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "npm run lint"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "author": "Vlad (v.v.kovaliov@gmail.com)",
    "license": "MIT",
    "keywords": [
        "rxjs",
        "transport"
    ],
    "bugs": {
        "url": "https://github.com/vladislavkovaliov/transport/issues"
    },
    "homepage": "https://github.com/vladislavkovaliov/transport#readme",
    "description": "",
    "release": {
        "branches": [
            "main"
        ],
        "plugins": [
            [
                "@semantic-release/npm",
                {
                    "npmPublish": true
                }
            ],
            "@semantic-release/github"
        ]
    },
    "devDependencies": {
        "commitizen": "^4.3.1",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^9.32.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-perfectionist": "^4.15.0",
        "eslint-plugin-prettier": "^5.5.3",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.2",
        "prettier": "^3.6.2",
        "rxjs": "^7.8.2",
        "semantic-release": "^24.2.6",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.38.0",
        "vitest": "^3.2.4"
    }
}
